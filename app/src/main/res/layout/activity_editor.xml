<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EditorActivity">

    <!-- Details field -->
    <EditText
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:id="@+id/edit_expense_name"
        android:hint="@string/hint_expense_name"
        android:inputType="textCapWords"
        android:layout_marginTop="8dp"/>

    <!-- Details field -->
    <EditText
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:id="@+id/edit_expense_details"
        android:hint="@string/hint_expense_details"
        android:layout_marginTop="8dp"/>

    <!-- Amount field -->
    <EditText
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:id="@+id/edit_expense_amount"
        android:hint="@string/hint_expense_amount"
        android:inputType="number"
        android:layout_marginTop="8dp" />

    <!-- Discount field -->
    <EditText
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:id="@+id/edit_expense_discount"
        android:hint="@string/hint_expense_discount"
        android:inputType="number"
        android:layout_marginTop="8dp"/>

</LinearLayout>